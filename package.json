{
  "name": "giant-client-server",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "lint-staged": "^7.3.0",
    "husky": "^1.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint --prefix client/",
      "git add",
      "npm run test --prefix client/"
    ],
    "*.vue": [
      "npm run lint --prefix client/",
      "git add",
      "npm run test --prefix client/"
    ]
  }
}
